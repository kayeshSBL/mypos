<!-- res/drawable/rectangular_button.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="#FF6200EE"/> <!-- Button background color -->

    <!-- Optional: Rounded corners -->
    <corners android:radius="4dp" /> <!-- Adjust the radius for roundness -->

    <stroke
        android:width="2dp"
        android:color="#FFFFFF" /> <!-- Optional border color and width -->

    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
