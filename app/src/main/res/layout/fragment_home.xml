<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/background"
        >

        <TextView
            android:id="@+id/amountLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_amount"
            android:textSize="18sp"
            android:layout_marginTop="80dp"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/amountEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="100"
            android:inputType="numberDecimal"
            android:hint="@string/_0_00"
            android:layout_below="@id/amountLabel"
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            android:padding="8dp"/>

        <LinearLayout
            android:id="@+id/iconContainer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/amountEditText"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp">
        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Void Tran"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_shape"
            android:drawableRight="@drawable/baseline_arrow_forward_24"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/submitButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay"
            android:background="@drawable/button_shape"
            android:drawableRight="@drawable/baseline_arrow_forward_24"
            android:textColor="@android:color/white"

            android:layout_centerHorizontal="true"/>
        </LinearLayout>

        <TextView
            android:id="@+id/companyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/main_blue"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_above="@id/iconContainer"
            android:layout_marginBottom="2dp" />

        <LinearLayout
            android:id="@+id/iconContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp">

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="TODO"
                android:src="@drawable/baseline_settings_24"
                android:layout_margin="16dp"/>

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="TODO"
                android:src="@drawable/baseline_info_24"
                android:layout_margin="16dp"/>

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="TODO"
                android:src="@drawable/baseline_payments_24"
                android:layout_margin="16dp"/>


        </LinearLayout>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>